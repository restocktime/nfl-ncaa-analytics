{
  "name": "sunday-edge-pro-betting-quantum",
  "version": "1.0.0",
  "description": "Elite NFL Analytics & Betting Intelligence Platform - Real-time data, AI predictions, and betting edge opportunities",
  "main": "sunday-edge-pro-server.js",
  "scripts": {
    "start": "node sunday-edge-pro-server.js",
    "dev": "nodemon sunday-edge-pro-server.js",
    "build": "npm run build:css && npm run build:js && npm run build:assets",
    "build:css": "postcss public/sunday-edge-pro-styles.css -o public/dist/styles.min.css --map",
    "build:js": "terser public/sunday-edge-pro-quantum.js -o public/dist/app.min.js --source-map",
    "build:assets": "mkdir -p dist && cp -r public/* dist/",
    "test": "jest --testPathPattern=\"sunday-edge-pro\"",
    "test:watch": "jest --watch --testPathPattern=\"sunday-edge-pro\"",
    "test:coverage": "jest --coverage --testPathPattern=\"sunday-edge-pro\"",
    "lint": "eslint public/sunday-edge-pro-quantum.js sunday-edge-pro-server.js",
    "lint:fix": "eslint --fix public/sunday-edge-pro-quantum.js sunday-edge-pro-server.js",
    "format": "prettier --write \"**/*.{js,html,css,md}\"",
    "validate": "npm run lint && npm run test",
    "deploy": "npm run build && npm start",
    "deploy:vercel": "vercel --prod",
    "deploy:docker": "docker build -t sunday-edge-pro . && docker run -p 3000:3000 sunday-edge-pro",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "logs": "pm2 logs sunday-edge-pro",
    "monitor": "pm2 monit",
    "restart": "pm2 restart sunday-edge-pro",
    "stop": "pm2 stop sunday-edge-pro",
    "analyze": "npm run build && bundlesize"
  },
  "keywords": [
    "nfl",
    "analytics",
    "betting",
    "sports",
    "ai",
    "predictions",
    "real-time",
    "odds",
    "quantum",
    "edge",
    "sunday",
    "football",
    "machine-learning",
    "data-visualization",
    "sportsbook",
    "gambling",
    "statistics",
    "live-scores",
    "weather",
    "fantasy-football"
  ],
  "author": {
    "name": "Sunday Edge Pro Team"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/restocktime/nfl-ncaa-analytics.git"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "autoprefixer": "^10.4.16",
    "bundlesize": "^0.18.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "jsdom": "^23.0.1",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "terser": "^5.24.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "public/sunday-edge-pro-quantum.js",
      "sunday-edge-pro-server.js",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "bundlesize": [
    {
      "path": "./public/dist/app.min.js",
      "maxSize": "100 kB"
    },
    {
      "path": "./public/dist/styles.min.css",
      "maxSize": "50 kB"
    }
  ],
  "nodemonConfig": {
    "watch": [
      "sunday-edge-pro-server.js",
      "public/"
    ],
    "ext": "js,html,css",
    "ignore": [
      "node_modules/",
      "dist/",
      "tests/"
    ],
    "delay": 1000
  },
  "pm2": {
    "apps": [
      {
        "name": "sunday-edge-pro",
        "script": "sunday-edge-pro-server.js",
        "instances": "max",
        "exec_mode": "cluster",
        "env": {
          "NODE_ENV": "production",
          "PORT": 3000
        },
        "error_file": "./logs/err.log",
        "out_file": "./logs/out.log",
        "log_file": "./logs/combined.log",
        "time": true,
        "max_memory_restart": "1G",
        "node_args": "--max-old-space-size=1024"
      }
    ]
  },

  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/sunday-edge-pro"
  },
  "config": {
    "port": 3000,
    "cache_duration": 30000,
    "api_timeout": 10000,
    "max_retries": 3
  }
}
