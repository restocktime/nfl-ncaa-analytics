{
  "name": "nfl-analytics-pro",
  "version": "2.0.0",
  "description": "Advanced NFL Analytics Platform with Machine Learning, Monte Carlo Simulations, and Real-time Data",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css",
    "build:css": "postcss public/modern-theme.css -o public/dist/styles.min.css --map",
    "test": "jest",
    "lint": "eslint public/*.js",
    "deploy": "npm run build && npm start",
    "serve": "http-server public -p 8080 -c-1"
  },
  "keywords": [
    "nfl",
    "analytics",
    "sports",
    "machine-learning",
    "monte-carlo",
    "predictions",
    "football",
    "statistics",
    "real-time"
  ],
  "author": "NFL Analytics Pro Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "eslint": "^8.44.0",
    "jest": "^29.6.1",
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nfl-analytics-pro/platform.git"
  },
  "bugs": {
    "url": "https://github.com/nfl-analytics-pro/platform/issues"
  },
  "homepage": "https://nflanalyticspro.com"
}